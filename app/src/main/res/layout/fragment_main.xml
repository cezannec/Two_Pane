<?xml version="1.0" encoding="utf-8"?>

<!-- Main fragment that displays all the Android-Me images as one customizable layout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offWhite">

    <!-- Three evenly spaced ViewPagers for each Android-Me body part -->

    <android.support.v4.view.ViewPager
        android:id="@+id/headPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bodyPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/legPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Save button that connects to code to save an image to a phone's image gallery -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/arrow_down_float"
        android:text="Save"/>

</LinearLayout>